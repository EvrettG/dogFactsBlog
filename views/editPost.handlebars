<article>  
  <h2>
    Edit Post
  </h2>
  <form class="editPostForm">
    <div>
      <input name="postTitle" type="text" value="{{post.post_title}}" />      
    </div>
    <div>
      Posted by you on {{format_date post.created_at}}
      |
      {{post.comments.length}} {{format_plural "comment" post.comments.length}}
    </div>
    <div>
      <label for="postText">Post</label>
      <textarea id="postText" name="postText">{{post.post_text}}</textarea>
    </div>
    <button type="submit">Save Changes</button>
    <button type="button" class="deletePost-btn">Delete Post</button>
  </form>
</article>


<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>